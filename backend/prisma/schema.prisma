generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Multiplicador {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String   @unique
  email     String   @unique
  senha     String
  estado    String
  municipio String
  telefone  String
  profissao String
  criadoEm  DateTime @default(now())
  rodas     Roda[]

  @@map("multiplicadores")
}

model Roda {
  id                  Int           @id @default(autoincrement())
  multiplicadorId     Int
  tema                String
  data                DateTime
  hora_inicio         DateTime
  municipio           String
  local               String
  publico_alvo        String
  latitude            Float?
  longitude           Float?
  numeroParticipantes Int?
  fotoFrequenciaUrl   String?
  fotoRodaUrl         String?
  status              String        @default("ativa")
  resumo              String?
  criadoEm            DateTime      @default(now())
  multiplicador       Multiplicador @relation(fields: [multiplicadorId], references: [id], onDelete: Cascade)

  @@map("rodas")
}
